<launch>
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find tiago_controller)/config/tiago_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="stop_controller_arm" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="stop arm_controller"/>
  <node name="stop_controller_head" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="stop head_controller"/>
  <node name="stop_controller_torso" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="stop torso_controller"/>
  <node name="stop_controller_mobile_base" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="stop mobile_base_controller"/>
  <node name="stop_controller_gripper" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="stop gripper_controller"/>

  <node name="controller_load_robot_framework" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="load robot_framework_controller"/>
  <node name="controller_start_robot_framework" pkg="controller_manager" type="controller_manager" respawn="false"
    output="screen" args="start robot_framework_controller"/>
</launch>
